        </div> 
    </div>



      <!-- email subscribe user list -->
    <div class="row">
      <div class="container pt50 pb1">
        <!-- title start -->
        <div class="col-md-12 mr-auto ml-auto ">
            <h3 class="text-white mb0 h3">
                Sign up today to receive our specials
            </h3>
            <br>
        <!-- form start -->
        <div class="form-body">
           <%= form_for @lead do |f| %>
            <div class="section">
              <label class="field prepend-icon">
                <span class="field-icon" style="color: white;">
                    <i class="fa fa-user"></i>
                    <%= f.text_field :fname, placeholder: "  First", style: "background-color: white;"%>
                    <i class="fa fa-user"></i>
                    <%= f.text_field :lname, placeholder: "  Last", style: "background-color: white;" %>
                    <i class="fa fa-envelope"></i>
                    <%= f.email_field :email, placeholder: "  Email", style: "background-color: white;"%>
                    <%= f.submit "Join Newsletter", class: 'btn btn-danger btn-lg' %>
                    <% end %>
                </span>
              </label>
            </div>  <!-- section end -->
            
              <!-- notices   -->
            <!-- <div class="subscribe-email-form error"> -->
              <% if notice %>  
                <%= notice %>
              <% end %>
            <!-- </div> -->
            <!-- <div class="subscribe-email-form success"> -->
              <% if alert %>
                <%= alert %>
              <% end %>
            <!-- </div> notice end         -->
        </div>  <!-- form end -->        

        </div> <!-- title end -->

      </div>
    
    </div> <!-- email subscribe end -->

  </div>
</div>

