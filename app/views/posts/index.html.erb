<body>
  <!--page title-->
  <div class="dzsparallaxer auto-init height-is-based-on-content "  data-options='{   direction: "reverse"}'
data-responsive-reference-width="1280" 
data-responsive-optimal-height="500"
  >
      <div class="divimage dzsparallaxer--target" style="width: 100%; height: 100%; background-image: url(<%= image_path('update.jpg')%>)">
      </div>

      <div class="container pt100 pb70">
          <div class="row pb50">
              <div class="col-md-8 ml-auto mr-auto wow bounceIn" data-wow-delay=".2s">
                  <h3 class="h1 text-center font500  pt100 text-black"></h3>
              </div>
          </div>
      </div>
  </div><!--parallax-->
  <!--/.page-title-->

  <div class="container pt90 pb60">
      <div class="row">
          <div class="col-md-12">
              <!-- post card -->
              <% @posts.each do |post| %>
                <div class="card mb30 card-post">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-5 align-self-center">
                            <a href="">
                              <% post.description&.body&.attachments&.each do |attachment| %>
                                <% if attachment.image? %>
                                    <span class="img-fluid"> <%= image_tag attachment, class: "img-fluid" %> </span>
                                <% elsif attachment.video? %>
                                    <%= video_tag url_for(attachment.attachable),
                                                preload: "auto",
                                                controls: "controls",
                                                width: "640",
                                                height: "360" %>
                                <% else %>
                                    <figcaption class="attachment__caption">
                                        <% if caption = attachment.try(:caption) %>
                                            <%= caption %>
                                        <% else %>
                                            <span class="attachment__name"><%= attachment.filename %></span>
                                            <span class="attachment__size"><%= number_to_human_size attachment.byte_size %></span>
                                        <% end %>
                                    </figcaption>
                                <% end %>
                              <% end %>
                            </a>
                        </div>
                        <div class="col-12 col-md-7">
                            <div class="card-body">
                                <h4 class="card-title font400"><%= link_to post.title, post,  style: "color: #212121;" %></h4>
                                <p class="card-text"><%= post.content_to_plain_text&.truncate(500) %></p>
                                <ul class="list-inline">
                                      <i class="fa fa-comments"></i>
                                        <a href="<%= post_url(post).html_safe %>#disqus_thread" style="color: #86939e">  
                                        </a>
                                </ul>                                


                                <a class="font600 btn btn-underline" href="blog-single.html"><%= link_to "READ MORE", post_path(post) %>  <i class="fa fa-angle-right"></i></a>
                         </div>
                        </div>
                    </div>
                </div><!--post card-->
              <% end %>
                    <h3 class="h1 text-center font300">
                   <%= link_to_prev_page @posts, "Previous Posts...", style: "color: #212121; " %>
                  </h3>

                    <h3 class="h1 text-center font300">
                   <%= link_to_next_page @posts, "Older Posts...", style: "color: #212121; " %>
                  </h3>



          </div>
      </div>
  </div>
</body>
